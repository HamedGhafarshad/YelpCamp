<% include ../partials/header %>
<div class = "container"> <!-- For spacing/padding -->
    <div class = "row"> <!-- Form will be placed in grad for further resizing -->
        <h1 style = "text-align: center">Add New Comment to <%= campground.name %></h1>
        <div style = "width: 30%; margin: 25px auto;">
        <!-- This form will send data from user to the /campgrounds POST route -->
            <form action = "/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class = "form-group"> <!-- Gives padding to each input and button -->
                     <input class ="form-control" type = "text" name="comment[text]" placeholder="text"></div>
                <div class = "form-group">
                     <input class = "form-control" type = "text" name="comment[author]" placeholder="author">
                </div>
                <div class = "form-group">
                 <button class = "btn btn-lg btn-default btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href = "/campgrounds">Go Back</a>
        </div>


    </div>
</div>
<% include ../partials/footer %>

