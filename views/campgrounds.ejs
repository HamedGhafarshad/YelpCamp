<% include partials/header %>
<div class = "container"> <!-- Makes it so that there are margins on the sides --> 


    <header class = "jumbotron"> <!-- Makes the text larger,stretches it and adds a background -->
        <div class ="container"> <!--Embedded container to ensure margin space if browser window becomes smaller -->
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                 <a class = "btn btn-primary btn-large" href ="/campgrounds/new">Add New Campground</a>
            <p>
        </div>
    </header> <!--Same as div -->

    <div class = "row"> <!-- Images will go here -->
        <div class ="col-lg-12">
            <h3>Our most popular campgrounds!<h3> 
        </div>
    </div>

    <% campgrounds.forEach(function(campground){ %> <!--Javascript to iterate through campgrounds array and display images --!>
        <div>

            <h4><%= campground.name %></h4>
            <img src = "<%= campground.image %>"> 
        </div>

    <% }); %>
</div>

<% include partials/footer %> 
